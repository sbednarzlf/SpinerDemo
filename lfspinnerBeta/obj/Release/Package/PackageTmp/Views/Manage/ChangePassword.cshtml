@model lfspinnerBeta.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>
<div class="vertical-registration-form">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "registration-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Zmien hasło</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        
                @Html.PasswordFor(m => m.OldPassword, new { type = "password", id = "cf-password", name = "password", @class = "form-control input-box", placeholder = "Podaj Hasło" })     
          
       
               @Html.PasswordFor(m => m.NewPassword, new { type = "password", id = "cf-password", name = "password", @class = "form-control input-box", placeholder = "Podaj Nowe Hasło" })  
          
       
                @Html.PasswordFor(m => m.ConfirmPassword, new { type = "password", id = "cf-password", name = "password", @class = "form-control input-box", placeholder = "Podaj Nowe  Hasło" })
        
       
           
                <input type="submit" value="Change password" class="btn btn-primary standard-button" />
           
       
    }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
