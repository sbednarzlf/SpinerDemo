@model lfspinnerBeta.Models.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- VERTICAL REGISTRATION FORM -->
<div class="vertical-registration-form">

    <h4 class="dark-text form-heading">Reset hasła</h4>
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "registration-form", id = "contact-form", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <input type="email" id="cf-email" name="email" class="form-control input-box" placeholder="Email">

        <button class="btn btn-primary standard-button">Wyślij</button>

        @Html.ActionLink("Posiadam już konto", "Login", null, null, new { @class = "small-text pull-left" })
        @Html.ActionLink("Załóż konto", "Registration", null, null, new { @class = "small-text pull-right" })

    }

    <!-- FORM SUBMIT SUCCESS / ERROR MESSAGES -->
    <p class="email-success dark-text small-text"><span class="icon-check-alt2 colored-text"></span>Wiadomość została wysłana.</p>
    <p class="email-error dark-text small-text"><span class="icon-close-alt2"></span>Błąd! Proszę sprawdzić poprawność uzupełnionych danych.</p>
    <!-- MAILCHIMP ALERTS
    <p class="mailchimp-success dark-text"><span class="icon-check-alt2 colored-text"></span>We sent the confirmation to your email</p>
    <p class="mailchimp-error dark-text"><span class="icon-close-alt2"></span>Error! Please check all fields filled correctly</p>
    -->
</div>
