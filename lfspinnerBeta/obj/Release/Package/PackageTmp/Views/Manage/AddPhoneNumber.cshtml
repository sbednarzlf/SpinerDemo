@model lfspinnerBeta.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<h2>@ViewBag.Title.</h2>
<div class="vertical-registration-form">
    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "registration-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Add a phone number</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
     
                @Html.TextBoxFor(m => m.Number, new {  id = "cf-password", name = "password", @class = "form-control input-box", placeholder = "Podaj Hasło" })

               <button class="btn btn-primary standard-button">Dodaj</button>

    }
  </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
